<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="10dp"
    android:background="#00000000"
    android:clipChildren="false"
    android:clipToPadding="false"

    >
    <TextView
        android:id="@+id/activity_detail_top_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:background="@drawable/player_bg_actor_tag_2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:text="测试1"
        android:textColor="@color/text_color_player_detail_btn"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/activity_detail_top_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="140dp"
        android:background="@drawable/player_bg_actor_tag_2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:text="测试2"
        android:textColor="@color/text_color_player_detail_btn"
        android:textSize="24dp" />
</RelativeLayout>

